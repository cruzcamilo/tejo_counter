<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#F44336</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#2196F3</item>
    </style>

    <style name="button" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Counter">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">@dimen/CounterBottomPadding</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">56sp</item>
    </style>

    <style name="CounterTitles">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/titles</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TeamName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/TeamNamePadding</item>
        <item name="android:textColor">@color/titles</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AdjustButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>