<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#F44336</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#2196F3</item>
    </style>

    <style name="button" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#E3F2FD</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttonLast" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#E3F2FD</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>